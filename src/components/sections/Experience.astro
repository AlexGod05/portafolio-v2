---
import Section from "../Section.astro"

import { work } from "@cv"
---

<Section class="accordion-container">
  <button class="accordion-header" aria-expanded="false">
    <h2><i class="fas fa-briefcase"></i> Experiencia laboral</h2>
    <span class="accordion-icon">â–¼</span>
  </button>

  <div class="accordion-content" aria-hidden="true">
    <ul>
      {
        work.map(
          ({ name, startDate, endDate, position, summary, highlights, url }) => {
            const startYear = new Date(startDate).getFullYear()
            const endYear =
              endDate != null ? new Date(endDate).getFullYear() : "Actual"
            const years = `${startYear} - ${endYear}`

            return (
              <li>
                <article>
                  <header>
                    <div>
                      <h3>
                        <a href={url} title={`Ver ${name}`} target="_blank">
                          {name}
                        </a>
                      </h3>
                      <h4>{position}</h4>
                    </div>

                    <time>{years}</time>
                  </header>

                  <footer>
                    <p>{summary}</p>
                    {highlights && highlights.length > 0 && (
                      <ul class="highlights">
                        {highlights.map((highlight) => (
                          <li>{highlight}</li>
                        ))}
                      </ul>
                    )}
                  </footer>
                </article>
              </li>
            )
          }
        )
      }
    </ul>
  </div>
</Section>

<style>
  .accordion-container {
    border: 1px solid var(--border);
    border-radius: 8px;
    overflow: hidden;
    background: var(--card-bg);
  }

  .accordion-header {
    width: 100%;
    padding: 16px;
    background: none;
    border: none;
    cursor: pointer;
    display: flex;
    justify-content: space-between;
    align-items: center;
    text-align: left;
    color: var(--text);
  }

  .accordion-header:hover {
    background: var(--card-bg);
  }

  .accordion-header h2 {
    margin: 0;
    display: flex;
    align-items: center;
    gap: 8px;
    color: var(--text);
  }

  .accordion-header h2 i {
    color: var(--secondary);
    font-size: 1.1em;
  }

  .accordion-icon {
    font-size: 12px;
    color: var(--secondary);
    transition: transform 0.3s ease;
  }

  .accordion-header[aria-expanded="true"] .accordion-icon {
    transform: rotate(180deg);
  }

  .accordion-content {
    max-height: 0;
    overflow: hidden;
    transition: all 0.3s ease-out;
    padding: 0 16px;
    color: var(--text);
  }

  .accordion-header[aria-expanded="true"] + .accordion-content {
    max-height: 1000px;
    padding: 16px;
    overflow-y: auto;
  }

  .accordion-header[aria-expanded="true"] + .accordion-content::-webkit-scrollbar {
    width: 8px;
  }

  .accordion-header[aria-expanded="true"] + .accordion-content::-webkit-scrollbar-track {
    background: var(--background);
    border-radius: 4px;
  }

  .accordion-header[aria-expanded="true"] + .accordion-content::-webkit-scrollbar-thumb {
    background: var(--secondary);
    border-radius: 4px;
  }

  .accordion-header[aria-expanded="true"] + .accordion-content::-webkit-scrollbar-thumb:hover {
    background: var(--primary);
  }

  ul {
    display: flex;
    flex-direction: column;
    gap: 32px;
  }

  article h3 {
    font-weight: 500;
    color: var(--text);
  }

  article a {
    color: var(--text);
  }

  article a:hover {
    text-decoration: underline;
    color: var(--primary);
  }

  article h4 {
    color: var(--secondary);
    font-weight: 400;
  }

  header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 4px;
  }

  time {
    color: var(--secondary);
    font-size: 0.85rem;
    min-width: 102px;
  }

  .highlights {
    margin-top: 16px;
    list-style: disc;
    padding-left: 20px;
  }

  .highlights li {
    color: var(--secondary);
    font-size: 0.9rem;
    margin-bottom: 4px;
  }

  @media (width <= 700px) {
    time {
      text-align: right;
    }
  }
</style>
