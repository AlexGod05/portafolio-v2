---
interface Props {
  name: string;
  iconHtml: string;
  keywords: string[];
}

const { name, iconHtml, keywords } = Astro.props;
---

<div class="card skill-card">
  <div class="card-content">
    <div class="card-header skill-header">
      <div class="skill-icon">
        <div set:html={iconHtml} />
      </div>
      <div class="skill-info">
        <h3>{name}</h3>
      </div>
    </div>
    <div class="skill-keywords">
      {keywords.map(keyword => (
        <span class="keyword-tag">{keyword}</span>
      ))}
    </div>
  </div>
</div>

<style>
  @import '@card/styles/cards.css';
  
  .skill-icon {
    width: 24px;
    height: 24px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--secondary);
  }
  
  .skill-info {
    flex: 1;
  }
  
  .skill-keywords {
    display: flex;
    flex-wrap: wrap;
    gap: 8px;
  }
  
  .keyword-tag {
    background: var(--background);
    color: var(--secondary);
    padding: 4px 8px;
    border-radius: 4px;
    font-size: 0.75rem;
    transition: all 0.2s ease;
  }
  
  .keyword-tag:hover {
    background: var(--bg-hover);
    transform: translateY(-1px);
  }
</style> 