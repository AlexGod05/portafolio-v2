---
import Section from "../Section.astro"
import { getCVData } from "@cv"
import { initAccordions } from "@/scripts/accordion"

const cvData = await getCVData()
const { education } = cvData
---

<Section>
  <div class="accordion-container">
    <button class="accordion-header" aria-expanded="false">
      <h2><i class="fas fa-graduation-cap"></i> Educación</h2>
      <span class="accordion-icon">▼</span>
    </button>

    <div class="accordion-content" aria-hidden="true">
      <div class="education-grid">
        {
          education.map(
            ({ institution, area, studyType, startDate, endDate, url }) => {
              const startYear = new Date(startDate).getFullYear()
              const endYear =
                endDate != null ? new Date(endDate).getFullYear() : "Actual"
              const years = `${startYear} - ${endYear}`

              return (
                <div class="education-card">
                  <div class="education-card-content">
                    <div class="education-header">
                      <h3>
                        <a href={url} title={`Ver ${institution}`} target="_blank">
                          {institution}
                        </a>
                      </h3>
                      <time>{years}</time>
                    </div>
                    <div class="education-details">
                      <h4>{studyType} en {area}</h4>
                      <a href={url} class="education-indicator" target="_blank" rel="noopener noreferrer">
                        <i class="fas fa-external-link-alt"></i>
                        <span>Ver institución</span>
                      </a>
                    </div>
                  </div>
                </div>
              )
            }
          )
        }
      </div>
    </div>
  </div>
</Section>

<script>
  import { initAccordions } from "@/scripts/accordion";
  document.addEventListener('DOMContentLoaded', () => {
    initAccordions();
  });
</script>

<style>
  .accordion-container {
    width: 100%;
  }

  .education-grid {
    display: flex;
    flex-direction: column;
    gap: 24px;
    padding: 24px 0;
  }

  .education-card {
    background: var(--card-bg, #ffffff);
    border-radius: 12px;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    transition: all 0.3s ease;
    cursor: pointer;
    border: 2px solid transparent;
    position: relative;
    overflow: hidden;
    width: 100%;
  }

  .education-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 4px;
    height: 100%;
    background-color: var(--border-color);
    transition: width 0.3s ease;
  }

  .education-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15);
    border-color: var(--border-color);
  }

  .education-card:hover::before {
    width: 8px;
  }

  .education-card-content {
    padding: 24px;
  }

  .education-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 16px;
  }

  .education-card h3 {
    margin: 0;
    color: var(--text);
    font-size: 1.25rem;
    font-weight: 500;
  }

  .education-card h3 a {
    color: var(--text);
    text-decoration: none;
    transition: color 0.3s ease;
  }

  .education-card h3 a:hover {
    color: var(--primary);
  }

  .education-card time {
    display: inline-block;
    background-color: #800020;
    color: white;
    padding: 4px 12px;
    border-radius: 20px;
    font-size: 0.9rem;
    white-space: nowrap;
  }

  .education-details {
    display: flex;
    flex-direction: column;
    gap: 12px;
  }

  .education-card h4 {
    margin: 0;
    color: var(--secondary);
    font-weight: 400;
    font-size: 1rem;
  }

  .education-indicator {
    display: flex;
    align-items: center;
    gap: 8px;
    color: var(--secondary);
    font-size: 0.9rem;
    transition: color 0.3s ease;
    text-decoration: none;
    cursor: pointer;
  }

  .education-indicator:hover {
    color: var(--primary);
  }

  .education-indicator i {
    font-size: 1.1rem;
  }

  @media (max-width: 768px) {
    .education-header {
      flex-direction: column;
      align-items: flex-start;
      gap: 8px;
    }

    .education-card time {
      align-self: flex-start;
    }
  }
</style>
