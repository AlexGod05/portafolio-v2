---
import Section from "../Section.astro"

import { projects } from "@cv"
---

<Section class="accordion-container">
  <button class="accordion-header" aria-expanded="false">
    <h2><i class="fas fa-code"></i> Proyectos</h2>
    <span class="accordion-icon">â–¼</span>
  </button>

  <div class="accordion-content" aria-hidden="true">
    <ul>
      {
        projects.map(
          ({ url, description, highlights, name }) => {
            return (
              <li>
                <article>
                  <header>
                    <h3>
                      <a href={url} target="_blank" title={`Ver el proyecto ${name}`}>
                        {name}
                      </a>
                    </h3>
                    <p>{description}</p>
                  </header>
                  <footer>
                    {highlights.map((highlight) => {
                      return <span>{highlight}</span>
                    })}
                  </footer>
                </article>
              </li>
            )
          }
        )
      }
    </ul>
  </div>
</Section>

<style>
  .accordion-container {
    border: 1px solid var(--border);
    border-radius: 8px;
    overflow: hidden;
    background: var(--card-bg);
  }

  .accordion-header {
    width: 100%;
    padding: 16px;
    background: none;
    border: none;
    cursor: pointer;
    display: flex;
    justify-content: space-between;
    align-items: center;
    text-align: left;
    color: var(--text);
  }

  .accordion-header:hover {
    background: var(--card-bg);
  }

  .accordion-header h2 {
    margin: 0;
    display: flex;
    align-items: center;
    gap: 8px;
    color: var(--text);
  }

  .accordion-header h2 i {
    color: var(--secondary);
    font-size: 1.1em;
  }

  .accordion-icon {
    font-size: 12px;
    color: var(--secondary);
    transition: transform 0.3s ease;
  }

  .accordion-header[aria-expanded="true"] .accordion-icon {
    transform: rotate(180deg);
  }

  .accordion-content {
    max-height: 0;
    overflow: hidden;
    transition: all 0.3s ease-out;
    padding: 0 16px;
    color: var(--text);
  }

  .accordion-header[aria-expanded="true"] + .accordion-content {
    max-height: 1000px;
    padding: 16px;
    overflow-y: auto;
  }

  .accordion-header[aria-expanded="true"] + .accordion-content::-webkit-scrollbar {
    width: 8px;
  }

  .accordion-header[aria-expanded="true"] + .accordion-content::-webkit-scrollbar-track {
    background: var(--background);
    border-radius: 4px;
  }

  .accordion-header[aria-expanded="true"] + .accordion-content::-webkit-scrollbar-thumb {
    background: var(--secondary);
    border-radius: 4px;
  }

  .accordion-header[aria-expanded="true"] + .accordion-content::-webkit-scrollbar-thumb:hover {
    background: var(--primary);
  }

  ul {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 1rem;
    margin-inline: -16px;
  }

  article {
    border-radius: 8px;
    border: 1px solid var(--border);
    gap: 16px;
    display: flex;
    flex-direction: column;
    padding: 16px;
    height: 100%;
    background: var(--card-bg);
    transition: all 0.3s ease;
  }

  article:hover {
    border-color: var(--primary);
    transform: translateY(-2px);
  }

  article header {
    flex: 1;
  }

  article h3 {
    margin-bottom: 4px;
    color: var(--text);
  }

  article a {
    color: var(--text);
  }

  article a:hover {
    text-decoration: underline;
    color: var(--primary);
  }

  article p {
    font-size: 0.75rem;
    line-height: 1.2rem;
    margin-bottom: 4px;
    color: var(--secondary);
  }

  article h3 span {
    color: var(--primary);
  }

  footer {
    display: flex;
    flex-wrap: wrap;
    gap: 4px;
    font-size: 0.6rem;
  }

  footer span {
    border-radius: 6px;
    background: var(--background);
    color: var(--text);
    font-size: 0.6rem;
    font-weight: 500;
    padding: 0.2rem 0.6rem;
    border: 1px solid var(--border);
  }

  .github-code-link {
    margin-left: 5px;
  }

  @media (width <= 700px) {
    ul {
      margin-inline: 0px;
    }

    article {
      border: 1px solid var(--border);
      box-shadow: none;
      padding: 16px;
    }
  }
</style>
