---
import { Section } from "@sections/index";
import { Accordion } from "@accordion/index";
import { getCVData } from "@utils/cv";

const cvData = await getCVData();
const { languages } = cvData;
---

<Section>
  <Accordion title="Idiomas" icon="fas fa-language">
    <div class="languages-container">
      {
        languages.map(({ language, fluency }) => (
          <div class="language-card">
            <div class="language-icon">
              {language === "Español" ? (
                <i class="fas fa-flag"></i>
              ) : language === "Inglés" ? (
                <i class="fas fa-language"></i>
              ) : (
                <i class="fas fa-globe"></i>
              )}
            </div>
            <div class="language-content">
              <h3 class="language-name">{language}</h3>
              <p class="language-level">{fluency}</p>
            </div>
            {language === "Inglés" && (
              <div class="language-badge">A2</div>
            )}
          </div>
        ))
      }
    </div>
  </Accordion>
</Section>

<style>
  .languages-container {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    padding: 1rem;
  }

  .language-card {
    display: flex;
    align-items: center;
    gap: 1.2rem;
    padding: 1rem;
    background-color: var(--card-bg);
    border-radius: 8px;
    border: 1px solid var(--border);
    box-shadow: var(--shadow-sm);
    transition: transform 0.2s, box-shadow 0.2s;
  }

  .language-card:hover {
    transform: translateY(-3px);
    box-shadow: var(--shadow-md);
  }

  .language-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 2.5rem;
    height: 2.5rem;
    background-color: var(--primary);
    color: white;
    border-radius: 50%;
    font-size: 1.2rem;
  }

  .language-content {
    flex: 1;
  }

  .language-name {
    margin: 0;
    font-size: 0.95rem;
    font-weight: 600;
    color: var(--text);
  }

  .language-level {
    margin: 0.2rem 0 0;
    font-size: 0.8rem;
    color: var(--secondary);
  }

  .language-badge {
    display: flex;
    align-items: center;
    justify-content: center;
    min-width: 2.2rem;
    height: 2.2rem;
    background-color: var(--primary-light);
    color: white;
    border-radius: 6px;
    font-weight: bold;
    font-size: 0.9rem;
    padding: 0 0.4rem;
  }
</style> 